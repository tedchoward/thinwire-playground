<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>ThinWire_Playground</display-name>
  <description>ThinWire Playground</description>

  <servlet>
    <servlet-name>thinwire</servlet-name>
    <description>ThinWire Servlet Engine</description>
    <servlet-class>thinwire.render.web.WebServlet</servlet-class>

    <init-param>
      <param-name>mainClass</param-name>
      <param-value>thinwire.apps.playground.Main</param-value>
    </init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>thinwire</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
</web-app>
